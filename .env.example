# Environment Variables Template
# Copy this file to .env and fill in your actual values

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DB_PASSWORD=secure-postgres-password

# AWS S3 Configuration (Production)
# Uncomment these for production with real AWS S3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET=rag-assistant-uploads

# LocalStack Configuration (Development/Testing)
# These are used when AWS_ENDPOINT is set to LocalStack
AWS_ENDPOINT=http://localstack:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET=rag-assistant-uploads

# Optional: Anthropic API (if using Claude instead of OpenAI)
# ANTHROPIC_API_KEY=your-anthropic-api-key
